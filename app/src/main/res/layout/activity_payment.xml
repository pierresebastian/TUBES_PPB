<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pay_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/icon_back"/>

            <ImageView
                android:layout_width="46dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:src="@drawable/logo" />
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="PAYMENT"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginStart="40dp"
            android:text="Bank Virtual Account"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bdr_text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mandiri"
                android:layout_width="92dp"
                android:layout_height="46dp"
                android:layout_marginEnd="25dp"
                android:src="@drawable/mandiri" />

            <ImageView
                android:id="@+id/bri"
                android:layout_width="93dp"
                android:layout_height="46dp"
                android:layout_marginEnd="25dp"
                android:src="@drawable/bri" />

            <ImageView
                android:id="@+id/bca"
                android:layout_width="93dp"
                android:layout_height="46dp"
                android:src="@drawable/bca" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="35dp"
            android:text="E-Money"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bdr_text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gopay"
                android:layout_width="93dp"
                android:layout_height="50dp"
                android:layout_marginEnd="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/gopay" />

            <ImageView
                android:id="@+id/ovo"
                android:layout_width="93dp"
                android:layout_height="51.5dp"
                android:layout_marginEnd="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/ovo" />

            <ImageView
                android:id="@+id/dana"
                android:layout_width="93dp"
                android:layout_height="51dp"
                android:scaleType="fitXY"
                android:src="@drawable/dana" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:text="Problem With Payment?"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Contact Us"
            android:textSize="15sp" />

    </LinearLayout>
</FrameLayout>